{
  "name": "@payment-center-for-africa/file-downloader",
  "version": "1.0.1",
  "description": "File downloader for any web based project",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "test:coverage": "jest --coverage --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payment-center-for-africa/file-downloader.git"
  },
  "author": "Mohcine NAZRHAN",
  "license": "ISC",
  "keywords": [
    "File",
    "Download"
  ],
  "bugs": {
    "url": "https://github.com/payment-center-for-africa/file-downloader/issues"
  },
  "homepage": "https://github.com/payment-center-for-africa/file-downloader#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  }
}
